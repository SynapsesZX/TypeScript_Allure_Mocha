pipeline {
    agent any

    environment {
        NODE_VERSION = '20'
    }

    tools {
        nodejs "${NODE_VERSION}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo '🛎️ Checking out code...'
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                echo '📦 Installing npm packages...'
                sh 'npm ci'
            }
        }

        stage('Run Appium Server') {
            steps {
                echo '🚀 Starting Appium server...'
                sh 'appium & sleep 5'
            }
        }

        stage('Run iOS Tests') {
            steps {
                echo '🧪 Running WebdriverIO tests...'
                sh 'npx wdio run testloginregressionios'
            }
        }

        stage('Publish Test Results') {
            steps {
                echo '📄 Publishing JUnit test results...'
                junit 'reports/junit/*.xml'
            }
        }
    }

    post {
        always {
            echo '🧹 Cleaning up...'
            sh 'killall node || true'
        }
        success {
            echo '✅ Tests passed!'
        }
        failure {
            echo '❌ Tests failed!'
        }
    }
}
