pipeline {
    agent any

    environment {
        NODE_VERSION = '20'
    }

    tools {
        nodejs "${NODE_VERSION}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ›ï¸ Checking out code...'
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'ğŸ“¦ Installing npm packages...'
                sh 'npm ci'
            }
        }

        stage('Run Appium Server') {
            steps {
                echo 'ğŸš€ Starting Appium server...'
                sh 'appium & sleep 5'
            }
        }

        stage('Run iOS Tests') {
            steps {
                echo 'ğŸ§ª Running WebdriverIO tests...'
                sh 'npx wdio run testloginregressionios'
            }
        }

        stage('Publish Test Results') {
            steps {
                echo 'ğŸ“„ Publishing JUnit test results...'
                junit 'reports/junit/*.xml'
            }
        }
    }

    post {
        always {
            echo 'ğŸ§¹ Cleaning up...'
            sh 'killall node || true'
        }
        success {
            echo 'âœ… Tests passed!'
        }
        failure {
            echo 'âŒ Tests failed!'
        }
    }
}
