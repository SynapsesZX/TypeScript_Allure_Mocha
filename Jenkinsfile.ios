pipeline {
    agent any

    environment {
        NODE_VERSION = '24'
    }

    tools {
        nodejs "${NODE_VERSION}"
    }

    stages {
        stage('Checkout') {
            steps {
                echo 'ğŸ›ï¸ Checking out code...'
                checkout scm
            }
        }

        stage('Install dependencies') {
            steps {
                echo 'ğŸ“¦ Installing npm packages...'
                sh 'npm ci'
            }
        }

        stage('Install Appium') {
            steps {
                echo 'âš™ï¸ Installing Appium globally...'
                sh 'npm install -g appium'
            }
        }

        stage('Start Appium') {
            steps {
                echo 'ğŸš€ Starting Appium...'
                sh 'appium & sleep 5'
            }
        }

        stage('Run iOS Tests') {
            steps {
                echo 'ğŸ§ª Running tests...'
                sh 'npx wdio run ./wdio.ios.conf.ts'
            }
        }

        stage('Publish Results') {
            steps {
                echo 'ğŸ“„ Publishing JUnit results...'
                junit 'reports/junit/*.xml'
            }
        }
    }

    post {
        always {
            script {
                echo 'ğŸ§¹ Cleaning up...'
                sh 'killall node || true'
            }
        }
        success {
            echo 'âœ… Tests passed!'
        }
        failure {
            echo 'âŒ Tests failed!'
        }
    }
}